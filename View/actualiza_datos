        <script src="js/jquery.validate.js"></script>

        <script>
            $().ready(function () {
                $("#valida_datos").validate({
                    rules: {
                        nombre: {
                            required: true
                        },

                        apellido: {
                            required: true
                        },

                        correo: {
                            required: true,
                            email: true
                        },

                        telefono: {
                            required: true,
                            digits: true
                        }
                    },
                });
            });
